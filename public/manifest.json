{
  "manifest_version": 2,
  "name": "GitHub Homepage Redesign",
  "description": "A Chrome extension that redesigns the GitHub homepage to display important information using the GitHub GraphQL API.",
  "version": "1.0",
  "icons": {
    "128": "icons/icon-128.png",
    "512": "icons/icon-512.png"
  },
  "background": {
    "scripts": ["src/main.ts"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["src/styles/index.css"],
      "js": ["src/main.ts"]
    }
  ],
  "permissions": ["activeTab", "storage", "https://github.com/*"],
  "browser_action": {
    "default_icon": "assets/logo.png",
    "default_popup": "src/App.vue"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}